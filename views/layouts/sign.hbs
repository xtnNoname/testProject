  <script type="text/javascript">
    var cbk = "{{- @flash}}";
    if (cbk.length >0 ) {
      $.notify({
          icon: 'pe-7s-gift',
          message: cbk

      }, {
          type: 'warning',
          timer: 4000,
          z_index: 1051
      });
    }
  </script>
