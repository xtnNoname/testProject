{{ extend 'layouts/sign' }} {{ block 'head' : }} {{ end }} {{ block 'footer' : }}
<script type="text/javascript">
    $("title").html("connexion");
</script>
{{ end }}

<form method="post" action="/signin" data-toggle="validator" role="login">
    <div class="header">
        <h3>Se connecter</h3>
    </div>
    <hr>
    <div class="form-group">
        <input type="email" name="email" required class="form-control input-lg" placeholder="membre@domaine.com" value="" />
    </div>
    <div class="form-group">
        <input type="password" name="password" class="form-control input-lg" id="password" placeholder="Mot de passe" required="" value="" />
    </div>
    <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">connexion</button>
    <button type="reset" name="annuler" class="btn btn-lg btn-default btn-block">Annuler</button>
    <div>
        <a href="/signup">Créer votre compte</a> ou <a href="#">Réinitialiser votre mot de passe</a>
    </div>
</form>
